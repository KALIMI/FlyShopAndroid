<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C162E"
    tools:context=".views.Sale.Sale">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center">

            <ImageView
                android:src="@drawable/chat_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <TextView
                android:text="@string/sale_top_chat_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_chat"
                android:paddingVertical="8dp"
                android:paddingHorizontal="5dp"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/saleProductList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="right">

            <TextView
                android:text="@string/bottom_chat_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_chat"
                android:paddingVertical="16dp"
                android:paddingHorizontal="8dp"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </LinearLayout>



</FrameLayout>